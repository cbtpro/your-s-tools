{
  "name": "your-s-tools",
  "version": "0.0.1",
  "main": "index.js",
  "scripts": {
    "dev:popup": "pnpm --filter ./packages/popup run build:watch",
    "dev:newtab": "pnpm --filter ./packages/newtab run build:watch",
    "dev:options": "pnpm --filter ./packages/options run build:watch",
    "dev:chrome": "pnpm --filter ./packages/chrome run build:watch",
    "dev": "concurrently \"pnpm dev:popup\" \"pnpm dev:newtab\" \"pnpm dev:options\" \"pnpm dev:chrome\"",
    "build:apps": "pnpm --filter \"./packages/*\" --filter \"!chrome\" -r build",
    "build:chrome": "pnpm --filter chrome run build",
    "build": "pnpm run build:apps && pnpm run build:chrome",
    "clean": "pnpm -r exec rimraf dist",
    "prebuild": "pnpm run clean",
    "catalog": "pnpx codemod pnpm/catalog",
    "test": "vitest run"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "packageManager": "pnpm@10.10.0",
  "engines": {
    "node": "^20.19.3",
    "pnpm": "^10.10.0"
  },
  "dependencies": {
    "@types/node": "catalog:",
    "consola": "catalog:",
    "vue-starport": "catalog:"
  },
  "devDependencies": {
    "@types/chrome": "catalog:",
    "concurrently": "catalog:",
    "rimraf": "^6.1.3",
    "turbo": "^2.8.7",
    "vite-plugin-static-copy": "catalog:"
  }
}
