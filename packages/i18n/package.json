{
  "name": "@your-project/i18n",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    },
    "./provider": {
      "types": "./dist/provider.d.ts",
      "import": "./dist/provider.es.js",
      "require": "./dist/provider.cjs.js"
    }
  },
  "scripts": {
    "dev": "tsc -b tsconfig.json && vite build --watch",
    "build:watch": "concurrently \"tsc -b tsconfig.json --watch\" \"vite build --watch\"",
    "build": "vite build"
  },
  "peerDependencies": {
    "i18next": "catalog:",
    "react": "catalog:",
    "react-i18next": "catalog:",
    "react-router-dom": "catalog:"
  },
  "devDependencies": {
    "@types/chrome": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitejs/plugin-react": "catalog:",
    "i18next": "catalog:",
    "react": "catalog:",
    "react-i18next": "catalog:",
    "react-router-dom": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-plugin-dts": "catalog:"
  }
}
